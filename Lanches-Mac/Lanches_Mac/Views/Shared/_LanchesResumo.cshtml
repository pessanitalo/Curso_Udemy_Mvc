@model Lanche
<div class="col-sm-4 col-md-4 col-lg-4">
    <img src="~/imagens/@Model.ImagemUrl" class="img-fluid" />
    <h3>Preço: @Model.Preco.ToString("c")</h3>
    <a asp-controller="Lanche" asp-action="Details" asp-route-Id="@Model.Id">
        @Model.Nome
    </a>
    <p>Lanche: @Model.Descricao</p>


    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
               asp-action="AdicionarItemNoCarrinhoCompra" asp-route-Id="@Model.Id">
                Incluir no Carrinho
            </a>
        </p>
    </div>


</div>
